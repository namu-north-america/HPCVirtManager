{
  "apiVersion": "autoscaling/v2",
  "kind": "HorizontalPodAutoscaler",
  "metadata": { "name": "test", "namespace": "default", "labels": { "kubevirt-manager.io/managed": "true" } },
  "spec": {
    "scaleTargetRef": { "apiVersion": "pool.kubevirt.io/v1alpha1", "kind": "VirtualMachinePool", "name": "test" },
    "minReplicas": 1,
    "maxReplicas": 1,
    "metrics": [
      {
        "type": "Resource",
        "resource": { "name": "cpu", "target": { "type": "Utilization", "averageUtilization": 20 } }
      }
    ]
  }
}
